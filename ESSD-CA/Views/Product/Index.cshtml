@{
    ViewData["Title"] = "Product Management";
    List<Product> products = (List<Product>)ViewData["products"];
}

<h3 class="mt-4">All Products</h3>

<a class="btn btn-primary" asp-controller="Product" asp-action="Create">Create New</a>

<table class="table mt-3">
    <thead style="white-space:nowrap">
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Product Description
            </th>
            <th>
                Unit Price
            </th>
            <th>
                Download Link
            </th>
            <th>
                Image Path
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product product in products)
        {
            <tr>
                <td>
                    @product.ProductName
                </td>
                <td>
                    @product.ProductDescription
                </td>
                <td>
                    $ @product.UnitPrice
                </td>
                <td>
                    @product.DownloadLink
                </td>
                <td>
                    @product.ImagePath
                </td>
                <td style="white-space:nowrap">
                    <a asp-action="Edit" asp-route-id="@product.Id"><img src="~/img/pencil-fill.svg"></a>
                    <a asp-action="Delete" asp-route-id="@product.Id"><img src="~/img/trash-fill.svg" class="ml-1"></a>
                </td>
            </tr>
        }
    </tbody>
</table>