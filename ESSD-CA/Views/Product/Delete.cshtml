@model ESSD_CA.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h3 class="mt-4">Delete Product</h3>


<h5 class="mt-4 mb-4">Are you sure you want to delete this?</h5>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Product Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            Product Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>
        <dt class="col-sm-2">
            Unit Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>
        <dt class="col-sm-2">
            Download Link
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DownloadLink)
        </dd>
        <dt class="col-sm-2">
            Image Path
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImagePath)
        </dd>
    </dl>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ProductName" />
                <input type="hidden" asp-for="ProductDescription" />
                <input type="hidden" asp-for="UnitPrice" />
                <input type="hidden" asp-for="DownloadLink" />
                <input type="hidden" asp-for="ImagePath" />
                <input type="hidden" asp-for="ProductStatus" value="Discontinued">
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index">Back to List</a>
    </div>

</div>