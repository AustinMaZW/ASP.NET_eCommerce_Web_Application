@{
    List<Product> products = (List<Product>)ViewData["products"];
    @model ESSD_CA.Models.ShoppingCart;

}

<div class="row pb-3 backgroundWhite">

    @foreach (Product product in products)
    {
        
    <div class="col-lg-3 col-md-6">
        <form action="/ShopGallery/AddToCart" method="post">
            <input hidden asp-for="@product.Id" />
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card" style="border:0px;">
                        <img src=@product.ImagePath class="card-img-top rounded" />
                        <div class="pl-1">
                            <p class="card-title h5"><b style="color:#2c3e50">@product.ProductName</b></p>
                            <p class="card-title text-primary">by <b>Author</b></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p>List Price: <strike><b class="">@product.UnitPrice</b></strike></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p style="color:maroon">As low as: <b class="">@product.UnitPrice</b></p>
                        </div>
                    </div>
                    <div class="row pl-2">
                        <div class="col-4 text-primary"><h4>Count</h4></div>
                        <div class="col-10"><input class="form-control" name="count" asp-for="Count"/></div>
                    </div>
                    <div>
                        <button type="submit" value="Add to Cart" class="btn btn-primary btn-square btn-lg form-control" style="height:50px;">Add to Cart</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    }
</div>


