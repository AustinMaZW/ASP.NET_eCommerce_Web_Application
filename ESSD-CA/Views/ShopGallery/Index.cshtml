@{
    ViewData["Title"] = "Shop";
    string searchString = (string)ViewData["searchString"];
    List<Product> products = (List<Product>)ViewData["products"];

}

@{
    int searchReturned = products.Count;
}

@section Scripts{
    <script src="~/js/ShopGallery/AddToCart.js"></script>
}
<style>
    .product_qty,
    .product_price
    {
        width: 100%;
    }

    .add_cart{
        padding-left:20px;
        padding-right:20px;
        padding-bottom:20px;
    }

</style>
<br />

@if (searchString != null)
{
    <h5>Your search for "@searchString" returned @searchReturned result(s)</h5>
}

@if (searchReturned == 0)
{
    <br />
    <a class="nav-item text-black-50" asp-area="" asp-controller="ShopGallery" asp-action="Index">Go back to Products</a>
}



<div class="container-fluid">
    @for (int i = 0; i < products.Count; i++)
    {
        @if ( i % 4 == 0)
        {
            @:<div class="row" style="padding-bottom:20px;">
        }

                  <div class="col-sm-3" >
                      <div class="card" style="height:100% ">
                          <img class="card-img rounded" src="@products[i].ImagePath">
                          <div class="card-body">
                              <h5 class="card-title">@products[i].ProductName</h5>
                              <p class="card-text">@products[i].ProductDescription</p>
                          </div>
                          <div class="form-inline justify-content-between add_cart" >
                              <div class="price text-success product_price"><h6>S$@products[i].UnitPrice</h6></div>
                              <p class="card-text mt-4 product_qty">Quantity</p>
                              <input type="number" class="form-control w-75" name="count" min="1" max="1000" value="1" />
                              <button type="button" value="Add to Cart" class="addQuantity btn btn-warning w-25" productId="@products[i].Id"><img src="~/img/shopping-cart.png" width="20" /></button>
                              <button type="submit" value="Checkout" class="btn btn-danger flex-grow-1 mt-1" style="width: 100%;">Checkout</button>
                          </div>
                      </div>

                  </div>


        @if(i!=0 && i%3==0 || i+1 == products.Count)
        {
            @:</div>
        }
        

    }
</div>
