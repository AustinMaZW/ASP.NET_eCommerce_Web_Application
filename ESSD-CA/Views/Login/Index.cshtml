
@{
    ViewData["Title"] = "Index";
}

@section Scripts
{
    <script src="~/js/Login/Index.js"></script>
}

<form id="loginform" action="/Login/Index" method="post">
    <table align="center">
        <tr>
            <td>
                Username:
            </td>
            <td>
                <input id="username" name="username" class="form-control" value="@ViewData["username"]" />
            </td>
        </tr>
        <tr>
            <td>
                Password:
            </td>
            <td>
                <input id="password" name="password" type="password" class="form-control" />
            </td>
        </tr>
        <tr>
            <td colspan="2" align="right">
                <input id="submitButton" type="submit" class="btn btn-outline-success" />
            </td>
        </tr>
        <tr>
            <td colspan="2" align="center">
                <div id="err_msg">@ViewData["errLogin"]</div>
            </td>
        </tr>
    </table>

</form>



